---
import {Image} from 'astro:assets'
import icon from '/public/coding_theme.gif'

// SOCIALS
import email from '/public/social_icons/email.svg'
import facebook from '/public/social_icons/facebook.svg'
import twitter from '/public/social_icons/twitter.svg'
import instagram from '/public/social_icons/instagram.svg'
import youtube from '/public/social_icons/youtube.svg'
import github from '/public/social_icons/github.svg'

const image_dimension = 32;
const hover_color = 'text-amber-400'; //can be propagated later!
---

<div class="relative z-50 top-0 w-screen min-h-32 sm:h-14 transition-all ease-in-out duration-200 text-gray-400 flex flex-row justify-between bg-clip-padding backdrop-filter backdrop-blur-sm border-gray-300 border-b-2">
    <div class="flex flex-row w-full">
        <div style="z-index: 100">
            <Image src={icon} alt="Icon"/>
        </div>
        <div class=" h-full p-2">
            <p class="hidden lg:block text-3xl font-bold text-white">Deakin Gift City Coding Club</p>
            <p class="hidden md:block lg:hidden text-xl font-bold text-white">DGCC</p>
            <p class="hidden sm:block md:hidden lg:hidden text-md font-bold text-white">DGCC</p>
            <p class="text-lg hidden sm:block">~Insert Caption Here~</p>
        </div>
        <div class="flex flex-row lg:grid lg:grid-cols-2 lg:grid-rows-3 gap-2 gap-x-4 items-center overflow-y-auto overflow-x-hidden transform ml-4">
            <button><Image src={email} alt="Icon" width={image_dimension} height={image_dimension}/></button>
            <button><Image src={facebook} alt="Icon" width={image_dimension} height={image_dimension}/></button>
            <button><Image src={twitter} alt="Icon" width={image_dimension} height={image_dimension}/></button>
            <button><Image src={instagram} alt="Icon" width={image_dimension} height={image_dimension}/></button>
            <button><Image src={youtube} alt="Icon" width={image_dimension} height={image_dimension}/></button>
            <button><Image src={github} alt="Icon" width={image_dimension} height={image_dimension}/></button>
        </div>
    </div>
    <div class="w-1/3 h-full text-center">
        <div class="w-full h-full flex flex-col lg:flex-row lg:justify-between lg:align-middle text-xl font-bold hover:text-white">
            <button class=`w-full h-full hover:${hover_color} hover:bold transition-all duration-700 ease-in-out` onclick="location.href='/'">Home</button>
            <button class=`w-full h-full hover:${hover_color} hover:bold transition-all duration-700 ease-in-out` onclick="location.href='/team'">The Team</button>
            <button class="w-full h-full">Contact</button>
        </div>
    </div>
</div>